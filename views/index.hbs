<html lang='ko'>

<head>
	<meta charset='UTF-8' />
	<meta name='viewport' content='width=device-width, initial-scale=1.0' />
	<title>{{data.title}}</title>
	<link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/reset-css@5.0.2/reset.min.css' />
	<link rel='preconnect' href='https://fonts.googleapis.com' />
	<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
	<link rel='stylesheet'
		href='https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@100;200;300;400;500;600;700;800;900&display=swap' />
	<link rel="stylesheet" href="css/global.css" />
	<link rel="icon" href="assets/favicon.ico" type="image/png" sizes="64x64">
	<script src='https://cdn.socket.io/3.1.3/socket.io.min.js'
		integrity='sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh'
		crossorigin='anonymous'></script>
	<script defer src='js/main.js'></script>
</head>

<body>
	<header>{{data.title}}</header>
	<main>
		<div id="welcome">
			<form>
				<input placeholder="room name" required type="text">
				<button type="submit">Enter room</button>
			</form>
		</div>
		<div id="call" style="display: flex;">
			<div id="localStream">
				<video id="localFace" autoplay playsinline width="400" height="400"></video>
				<button id="mute">Mute</button>
				<button id="camera">Turn Camera Off</button>
				<select id="cameras"></select>
			</div>
			<div id="remoteStream">
				<video id="remoteFace" autoplay playsinline width="400" height="400"></video>
			</div>
		</div>
	</main>
</body>

</html>